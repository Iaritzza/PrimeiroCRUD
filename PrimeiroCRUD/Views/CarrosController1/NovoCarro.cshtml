@model PrimeiroCRUD.Models.Carro

@{
    ViewData["Title"] = "NovoCarro";
}
<h2>Inserir novo carro</h2>

<form asp-action="NovoCarro" method="post">

    <div class="form-group">
        <label asp-for="Marca" class="control-label"></label>
        <input asp-for="Marca" class="from-control" />
    </div>

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="from-control" />
    </div>

    <div class="form-group">
        <label asp-for="Ano" class="control-label"></label>
        <input asp-for="Ano" class="from-control" />
    </div>

    <input type ="submit" value="Salvar" class="bnt" />
</form>

<a asp-action ="Index" class="bnt bnt-link">Voltar</a>
